<h1>New Game</h1>

<!-- <p> <%= @letters %></p> -->
<div id="letters" style="display: flex; justify-content: space-around;">
  <% @letters.each do |letter| %>
  <p style="margin-right: 15px;"> <%= letter %></p>

  <% end %>
</div>


<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <label for="" style="display: block; margin-bottom: 15px;">What is the longest word you can find?</label>
  <input id="availableLetters" name="availableLetters" type="hidden" value="<%= @letters.join %>"/>
  <input type="text" name="word" placeholder="Enter your word here">
  <input type="submit" value="Play">
</form>
